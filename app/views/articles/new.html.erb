<h1>
  Create and Article
</h1>

<% if @article.errors.any?  %>
<h2>The following errors are preventing the article from saving</h2>

  <% @article.errors.full_messages.each do  |msg| %>
  <ul>
    <l1><%= msg %></l1>
  </ul>
  <% end %> 

<% end %>


<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>


<% end %>